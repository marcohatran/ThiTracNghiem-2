@model Model.EF.Admin

@{
    ViewBag.Title = "Thêm tài khoản quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section css
    {

    <!-- Wait Me Css -->
    <link href="/Assets/admin/plugins/waitme/waitMe.css" rel="stylesheet" />
    <!-- Bootstrap Select Css -->
    <link href="/Assets/admin/plugins/bootstrap-select/css/bootstrap-select.css" rel="stylesheet" />
}
@section title
{
    <title>Thêm tài khoản quản trị</title>
}

<div class="block-header">

</div>
<!-- ADD FORM -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    THÊM TÀI KHOẢN ADMIN
                </h2>
            </div>
            <div class="body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label>Tài khoản</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền tên đăng nhập", @required = "required" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label>Mật khẩu</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @type = "password", @class = "form-control", @placeholder = "Điền mật khẩu", @required = "required" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label>Họ tên</label>
                            </div>
                            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                                <div class="form-group">
                                    <div class="form-line">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Điền tên chủ tài khoản", @required = "required" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="row clearfix">
                            <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                                <label>Chọn quyền</label>
                            </div>
                            <div class="col-sm-4" style="padding-left: 0px; padding-right: 0px;">
                                <div class="col-sm-10" style="padding-left: 0px;">
                                    @Html.DropDownList("id_permission", new List<SelectListItem>
                           {
                               new SelectListItem{ Selected=true,Text = "Quản lý toàn bộ", Value = "1"},
                               new SelectListItem{ Text = "Quản lý môn học và coi thi", Value = "0"},
                               new SelectListItem{ Text = "Quản lý kỳ thi", Value = "2"}
                           }, new { @class = "form-control show-tick" })
                                </div>
                                @Html.ValidationMessageFor(model => model.id_permission, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-sm-6">
                                <button type="submit" class="btn bg-orange waves-effect">
                                    <i class="material-icons">save</i>
                                    <span>Lưu</span>
                                </button>
                            </div>
                        </div>
                        <div class="row clearfix">

                        </div>
                    </div>
                }

                <div>
                    <a href="/Admin/AdminManager/" class="btn bg-light-blue waves-effect"><i class="material-icons">navigate_before</i><span>Trở về</span></a>
                </div>
            </div>
            <!--#BODY-->
        </div>
    </div>
</div>

<!-- #END# ADD FORM -->
<!-- Jquery Core Js -->
<script src="/Assets/admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap Core Js -->
<script src="/Assets/admin/plugins/bootstrap/js/bootstrap.js"></script>
<!-- Select Plugin Js -->
<script src="/Assets/admin/plugins/bootstrap-select/js/bootstrap-select.js"></script>
<!-- Slimscroll Plugin Js -->
<script src="/Assets/admin/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
<!-- Waves Effect Plugin Js -->
<script src="/Assets/admin/plugins/node-waves/waves.js"></script>
<!-- Autosize Plugin Js -->
<script src="/Assets/admin/plugins/autosize/autosize.js"></script>
<!-- Moment Plugin Js -->
<script src="/Assets/admin/plugins/momentjs/moment.js"></script>
<!-- Bootstrap Notify Plugin Js -->
<script src="/Assets/admin/plugins/bootstrap-notify/bootstrap-notify.js"></script>

<!-- Custom Js -->
<script src="/Assets/admin/js/admin.js"></script>

@if (TempData["NoticeMessage"] != null)
{


    <script>
    $.notify({

        title: '<strong>Thông báo: </strong> ',
        message: '@TempData["NoticeMessage"]'
    }, {
        type: '@TempData["NoticeType"]',
        delay: 3000,
        template: '<div data-notify="container" class="col-xs-11 col-sm-2 alert alert-{0}" role="alert">' +
            '<span data-notify="title">{1}</span>' +
            '<span data-notify="message">{2}</span>' +
        '</div>'
    });
    </script>

}


<!-- Demo Js -->
<script src="/Assets/admin/js/demo.js"></script>


